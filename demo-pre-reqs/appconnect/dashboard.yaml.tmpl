apiVersion: appconnect.ibm.com/v1beta1
kind: Dashboard
metadata:
  name: ace-dashboard
  namespace: ace-demo
spec:
  license:
    accept: true
    license: ${ACE_LICENSE}
    use: CloudPakForIntegrationNonProductionFREE
  pod:
    containers:
      content-server:
        resources:
          limits:
            cpu: 250m
      control-ui:
        resources:
          limits:
            cpu: 250m
            memory: 250Mi
  useCommonServices: true
  version: ${ACE_VERSION}
  storage:
    class: ${FILE_STORAGECLASS}
    size: 2Gi
    type: persistent-claim
  replicas: 1
